<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="45dp"
                android:background="@color/colorPrimary" >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:maxLines="1"
        android:text="@string/title_bar_text"
        android:textColor="#fff"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/btn_menu"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:background="@null"
        android:src="@drawable/ic_menu_white_24dp" />
    <ImageButton
        android:visibility="gone"
        android:id="@+id/ibtn_share"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_share_white_24dp"
        android:background="@null"
        android:layout_width="45dp"
        android:layout_height="45dp"/>
    <ImageButton
        android:visibility="gone"
        android:layout_toLeftOf="@id/ibtn_share"
        android:layout_toStartOf="@id/ibtn_share"
        android:id="@+id/ibtn_text_size"
        android:background="@null"
        android:src="@drawable/ic_text_fields_white_24dp"
        android:layout_width="45dp"
        android:layout_height="45dp"/>

</RelativeLayout>