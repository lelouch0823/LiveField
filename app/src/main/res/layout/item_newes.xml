<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_news_list_pic"
        android:layout_width="150dp"
        android:layout_height="80dp"/>

    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/tv_new_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:layout_toEndOf="@id/img_news_list_pic"
        android:layout_toRightOf="@id/img_news_list_pic"
        android:textSize="20sp"
        tools:text="标题"/>

    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/tv_new_list_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_new_list_title"
        android:layout_toEndOf="@+id/img_news_list_pic"
        android:layout_toRightOf="@+id/img_news_list_pic"
        android:maxLines="3"
        android:textColor="@color/colorGray"
        tools:text="2014-10-11 11:30"/>
</RelativeLayout>