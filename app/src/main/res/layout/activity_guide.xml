<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bjw.livefield.ui.activity.GuideActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_guide_images"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>

    <Button
        android:visibility="gone"
        android:id="@+id/btn_load_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button_red_selector"
        android:text="@string/guide_btn"
        android:textColor="@color/btn_text_color_guide"/>
<RelativeLayout
    android:layout_centerHorizontal="true"
    android:layout_alignParentBottom="true"
    android:layout_width="wrap_content"
    android:layout_marginBottom="25dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_dots_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    </LinearLayout>

    <ImageView
        android:id="@+id/image_red_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_guide_dot_selected"/>
</RelativeLayout>
</RelativeLayout>
